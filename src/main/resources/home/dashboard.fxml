<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1126.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="home.projectController">
   <children>
      <Label layoutX="63.0" layoutY="35.0" prefHeight="40.0" prefWidth="152.0" text="DashBoard">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <HBox layoutX="63.0" layoutY="85.0" prefHeight="63.0" prefWidth="1027.0" style="-fx-background-color: #F3F3F3;">
         <children>
            <HBox prefHeight="63.0" prefWidth="750.0">
               <children>
                  <ImageView fitHeight="60.0" fitWidth="60.0" onMouseClicked="#getAddView" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/add.jpg" />
                     </image>
                  </ImageView>
                  <ImageView fitHeight="60.0" fitWidth="60.0" onMouseClicked="#refreshTable" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/refresh.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </ImageView>
                  <JFXToggleButton fx:id="isEditToggle" text="Edit" />
               </children>
            </HBox>
            <ImageView fitHeight="60.0" fitWidth="60.0" onMouseClicked="#search" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icons8_Search_52px.png" />
               </image>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </ImageView>
            <TextField prefHeight="61.0" prefWidth="167.0">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <TableView fx:id="projectTable" layoutX="50.0" layoutY="162.0" onMouseClicked="#switchToIssues" prefHeight="528.0" prefWidth="1027.0">
         <columns>
            <TableColumn fx:id="project_id" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="project_name" prefWidth="212.0" text="Project Name" />
            <TableColumn fx:id="project_issues" prefWidth="75.0" text="Issues" />
         </columns>
      </TableView>
   </children>
</AnchorPane>
