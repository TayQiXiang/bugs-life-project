<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.forgotPasswordController">
   <children>
      <VBox alignment="CENTER" layoutY="-3.0" prefHeight="409.0" prefWidth="777.0" style="-fx-border-color: black;">
         <children>
            <Label prefHeight="35.0" prefWidth="194.0" text="Reset Password">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" layoutX="11.0" layoutY="118.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Old Password">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="oldPasswordField" prefHeight="60.0" prefWidth="200.0" promptText="Enter Old Password">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </PasswordField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="New Password">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="newPasswordField" prefHeight="60.0" prefWidth="200.0" promptText="Enter new password">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </PasswordField>
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="27.0" prefHeight="80.0" prefWidth="200.0">
               <children>
                  <Label text="Confirm password">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="confirmPasswordField" prefHeight="60.0" prefWidth="200.0" promptText="Reenter new password" />
               </children>
            </HBox>
            <JFXButton onAction="#setUpdaterBtn" prefHeight="48.0" prefWidth="155.0" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-background-radius: 20;" text="Update Password">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </JFXButton>
         </children>
      </VBox>
   </children>
</AnchorPane>
